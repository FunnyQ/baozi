<div class="message-wrapper <%= role %>">
  <div class="user-info row">
    <div class="info">
      <span class="avatar">
        <img src="<%= avatar %>" alt="">
      </span>
      <span class="name">
        <%= name %>
      </span>
    </div>
  </div>
  <div class="message-content">
    <% rand(1..3).times.each do |m| %>
      <p><%= Faker::Lorem.sentence %></p>
    <% end %>
  </div>
</div>
